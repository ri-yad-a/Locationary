<AnchorPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.locationary.BucketListController">
   <children>
      <Button layoutX="165.0" layoutY="220.0" mnemonicParsing="false" onAction="#addLocationButtonClicked" text="Add Location" />
      <TextField fx:id="locationNameTextField" layoutX="61.0" layoutY="185.0" prefHeight="26.0" prefWidth="90.0" />
      <ChoiceBox fx:id="scopeChoiceBox" layoutX="161.0" layoutY="185.0" prefHeight="26.0" prefWidth="90.0" />
      <Label layoutX="66.0" layoutY="167.0" text="Location Name" />
      <Label layoutX="190.0" layoutY="167.0" text="Scope" />
      <Label layoutX="295.0" layoutY="167.0" text="POI" />
      <TextField fx:id="POITextField" layoutX="260.0" layoutY="185.0" prefHeight="26.0" prefWidth="90.0" />
      <Button layoutX="170.0" layoutY="404.0" mnemonicParsing="false" onAction="#completedButtonClicked" text="Completed" />
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="850.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Button layoutX="1.0" layoutY="27.0" mnemonicParsing="false" onAction="#locationaryButtonClicked" text="Locationary" textAlignment="CENTER" underline="true" />
      <ListView fx:id="locationsView" layoutX="413.0" layoutY="57.0" onMouseClicked="#selectLocationAction" prefHeight="325.0" prefWidth="422.0" />
      <RadioButton fx:id="citywideButton" layoutX="425.0" layoutY="389.0" mnemonicParsing="false" onAction="#updateLocationsView" text="Citywide">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="domesticButton" layoutX="554.0" layoutY="389.0" mnemonicParsing="false" onAction="#updateLocationsView" text="Domestic">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="internationalButton" layoutX="687.0" layoutY="389.0" mnemonicParsing="false" onAction="#updateLocationsView" text="International">
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <Label fx:id="statusLabel" layoutY="628.0" text="Label" />
      <TextArea fx:id="locationDisplay" editable="false" layoutX="31.0" layoutY="253.0" prefHeight="143.0" prefWidth="353.0" promptText="Location attributes will show up here..." />
      <Label layoutX="413.0" layoutY="28.0" text="Bucket Listed Locations">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
